// D:\TusukaReact\TusukaWebsiteCLientOfficial\tsconfig.app.json
{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    // "jsx": "react-jsx",
     "jsx": "react-jsx",
    "types": ["vite/client", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    // "erasableSyntaxOnly": true, // Consider removing this if it causes issues with declaration files
    "noUncheckedSideEffectImports": true,

    // Add these two lines for better compatibility with Swiper and module imports
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src", // This will include all files in src, including custom.d.ts
    "src/**/*.d.ts" // Explicitly include all .d.ts files in src and its subdirectories
  ]
}